{
    "AWSEBDockerrunVersion":2,
    "containerDefinitions":[
        {
            "name": "client",
            "image": "stephengrider/multi-client            ",
            "hostname": "client",
            "essential" : false,
            "memory" : 100
        },
        {
            "name": "server",
            "image": "appa253/multi-server",
            "hostname": "api",
            "essential" : false,
            "memory" : 100
        },
        {
            "name": "worker",
            "image": "appa253/multi-worker",
            "hostname": "worker",
            "essential" : false,
            "memory" : 100
        },
        {
            "name": "nginx",
            "image": "appa253/multi-nginx",
            "hostname": "nginx",
            "essential" : true,
            "portMappings" : [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links":["client", "server"],
            "memory" : 100
        }
    ]
}